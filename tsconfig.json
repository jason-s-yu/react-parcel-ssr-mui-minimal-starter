{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    },
    "lib": ["es2016", "esnext.asynciterable", "DOM"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "jsx": "react",
    "esModuleInterop": true
  },
  "exclude": ["node_modules"]
}